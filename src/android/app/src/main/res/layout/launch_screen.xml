<!-- Material Design 3 compliant splash screen layout -->
<!-- androidx.constraintlayout.widget.ConstraintLayout version: 2.1.4 -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen"
    android:theme="@style/AppTheme.Launcher"
    android:fitsSystemWindows="true"
    android:contentDescription="@string/splash_screen_description"
    android:importantForAccessibility="no">

    <!-- 
    Requirement: Mobile-First Design
    - Implements mobile-optimized splash screen for native Android application
    - Uses ConstraintLayout for responsive design across different screen sizes
    -->

    <!-- 
    Requirement: UI Framework Integration
    - Integrates with Material Design 3 principles through AppTheme.Launcher
    - Uses system-provided splash screen background from drawable/splash_screen.xml
    -->

    <!-- 
    Requirement: Theme Support
    - Supports both light and dark themes through resource qualifiers
    - Uses dynamic colors on Android 12+ through Material Design 3 theming
    -->

</androidx.constraintlayout.widget.ConstraintLayout>